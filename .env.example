REPO_URL=https://github.com/your-org/your-mc-plugins-repo.git
# Branch with plugin/world updates
REPO_BRANCH=main
# Where to keep the cloned repo (inside container)
REPO_PATH=/tmp/plugin-repo

# Absolute path to the Minecraft data directory mounted into the manager container
DATA_DIR=/data

# HTTP server port the manager listens on
PORT=8080

# RCON connection details for the running Minecraft server
RCON_HOST=minecraft
RCON_PORT=25575
RCON_PASSWORD=changeme

# Optional: command sent via RCON to restart the server
RCON_RESTART_COMMAND=restart

# Optional: numeric UID to chown the synced data to (plugins and bedwars_worlds)
PLUGINS_UID=
